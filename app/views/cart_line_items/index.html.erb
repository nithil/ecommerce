<h2>Your cart</h2>

<% if current_user.cart_line_items.empty? %>
	<b>Your shopping cart is empty.<br/> Continue shopping <%= link_to "here", products_path %></b>
<% else %>
<table border="1">
	<thead>
		<tr>
			<th> Sl no. </th>
			<th> Name </th>
			<th> Price </th>
			<th> Quantity </th>
			<th> Total </th>
			<th> Action </th>
		</tr>	
	</thead>
	<tbody>
	<% cart_total = 0 %>
		<% @cart_line_items.each_with_index do |line_item,index| %>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= line_item.product.name %></td>
			<td><%= line_item.product.price %></td>
			<td>
				<%= form_for line_item do |f| %>
					<%= f.select :quantity, (1..10).to_a %>
					<%= f.submit "Update" %>
				<% end %>
			</td>
			<td><%= total = line_item.product.price * line_item.quantity %></td>
			<% cart_total += total %>
			<td><%= link_to "remove", cart_line_item_path(line_item.id), method: :delete, data: {confirm: "Are you sure?"} %>

				<%= form_for @wishlist do |f| %>
					<%= f.hidden_field :product_id, value: line_item.product_id %>
					<%= f.submit "save for later" %>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>Cart total : <%= cart_total %></h2>




<%= form_for @order do |f| %>
	<label>Address : </label><br/>
	<%= f.collection_select :address_id, current_user.addresses, :id, :street, prompt: "Select Address" %><br/>
	<%= f.submit "checkout" %>
<% end %>
<% end %>